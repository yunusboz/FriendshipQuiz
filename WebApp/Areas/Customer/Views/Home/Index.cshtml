@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Arkadaşlık Anketine hoşgeldiniz</h2>
                <h4 class="py-2 text-white">Arkadaşınızın sizi ne kadar tanıdığını anket oluşturarak öğrenebilirsiniz!</h4>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form method="get" class="row">
                    <div class="form-floating input-group mb-3 col-md-6">
                        <input id="name" name="name" type="text" class="form-control" aria-required="true" data-val="true"
                               placeholder="Adınız" aria-label="Recipient's username" data-val-required="İsim alanı zorunlu"
                               aria-describedby="button-addon2" data-val-length-min="3"
                               data-val-minlength="İsim en az 3 karakter içermelli" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="name"
                              data-valmsg-replace="true"></span>
                        <label class="ms-2 text-muted">Adınız</label>
                        <button asp-area="Customer" asp-controller="Quiz" asp-action="Create" class="btn btn-primary" type="submit" id="button-addon2">Anket Oluştur</button>
                    </div>
                </form>
            </div>
            <div class="col-md-12">
                <p class="divider-text d-flex pt-2">Veya</p>
                <p class="text-center text-info border">
                    Üye olarak 10 soruluk anket oluşturabilir ve sınırsız paylaşım hakkına sahip olabilirsiniz.
                </p>
                <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" id="register" asp-area="Identity" asp-page="/Account/Register">Üye Ol</a>
                        <a class="btn btn-info mx-2" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>               
                </div>
            </div>
        </div>
    </div>
</div>
