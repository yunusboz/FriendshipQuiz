@model List<QuizResult>

@if (Model.Count == 0)
{
    <div class="text-center">
        <h4>Anket henüz çözülmedi</h4>
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>Anket Sonuçları</tr>
            <tr>
                <th>İsim</th>
                <th>Doğru Cevap Sayısı</th>
                <th>Yanlış Cevap Sayısı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CorrectAnswer</td>
                    <td>@item.WrongAnswer</td>
                </tr>
            }
        </tbody>
    </table>
}