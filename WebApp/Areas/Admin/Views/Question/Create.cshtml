@model QuestionViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Soru Oluştur</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form method="post">
                        <div class="border p-3">
                            <input asp-for="QuizId" hidden />
                            @*<div asp-validation-summary="ModelOnly"></div>*@
                            <div class="form-floating mb-3">
                                <input asp-for="QuestionText" class="form-control" />
                                <label asp-for="QuestionText" class="form-label"></label>
                                <span asp-validation-for="QuestionText" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="OptionA" class="form-control" />
                                <label asp-for="OptionA" class="form-label"></label>
                                <span asp-validation-for="OptionA" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="OptionB" class="form-control" />
                                <label asp-for="OptionB" class="form-label"></label>
                                <span asp-validation-for="OptionB" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="OptionC" class="form-control" />
                                <label asp-for="OptionC" class="form-label"></label>
                                <span asp-validation-for="OptionC" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="OptionD" class="form-control" />
                                <label asp-for="OptionD" class="form-label"></label>
                                <span asp-validation-for="OptionD" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="OptionE" class="form-control" />
                                <label asp-for="OptionE" class="form-label"></label>
                                <span asp-validation-for="OptionE" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">Soru Ekle</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-primary border form-control">
                                        Anketler
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
        
       
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


