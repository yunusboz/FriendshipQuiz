@model QuizViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Anket Oluştur</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" id="form">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quiz.Name" class="form-control border-0 shadow" />
                    <label asp-for="Quiz.Name" class="ms-2"></label>
                    <span asp-validation-for="Quiz.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quiz.CreatedBy" class="form-control border-0 shadow" />
                    <label asp-for="Quiz.CreatedBy" class="ms-2"></label>
                    <span asp-validation-for="Quiz.CreatedBy" class="text-danger"></span>
                </div>
                <div class="card shadow border-0 mt-4">
                    <div class="card header bg-gradient m-lg-0 py-3 ">
                        <div class="row mx-1">
                            <div class="col-12 text-center">
                                <h2 class="py-2">Soru Ekle</h2>
                            </div>
                            <div class="form-floating  py-2 col-12">
                                <input asp-for="Question.QuestionText" class="form-control border-0 shadow" />
                                <label asp-for="Question.QuestionText" class="ms-2"></label>
                                <span asp-validation-for="Question.QuestionText" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question.OptionA" class="form-control border-0 shadow" />
                                <label asp-for="Question.OptionA" class="ms-2"></label>
                                <span asp-validation-for="Question.OptionA" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question.OptionB" class="form-control border-0 shadow" />
                                <label asp-for="Question.OptionB" class="ms-2"></label>
                                <span asp-validation-for="Question.OptionB" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question.OptionC" class="form-control border-0 shadow" />
                                <label asp-for="Question.OptionC" class="ms-2"></label>
                                <span asp-validation-for="Question.OptionC" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question.OptionD" class="form-control border-0 shadow" />
                                <label asp-for="Question.OptionD" class="ms-2"></label>
                                <span asp-validation-for="Question.OptionD" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question.OptionE" class="form-control border-0 shadow" />
                                <label asp-for="Question.OptionE" class="ms-2"></label>
                                <span asp-validation-for="Question.OptionE" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Anket Oluştur</button>
                    </div>
                    
                    <div class="col-6 col-md-3">
                        <a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Anketler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}