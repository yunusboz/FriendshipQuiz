@model List<Quiz>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Anketler</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Anket Oluştur
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Anket Adı</th>
                    <th>Oluşturan</th>
                    <th>Oluşturma Tarihi</th>
                    <th>Sorular</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.QuizID</td>
                        <td>@obj.Name</td>
                        <td>@obj.CreatedBy</td>
                        <td>@obj.CreatedDate</td>
                        <td>
                            <a asp-controller="Question" asp-action="GetQuestions" asp-route-id="@obj.QuizID" class="btn btn-info">
                                Soruları Görüntüle
                            </a>
                        </td>

                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Quiz" asp-action="Edit" asp-route-id="@obj.QuizID" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Güncelle
                                </a>
                                <a asp-controller="Quiz" asp-action="Delete" asp-route-id="@obj.QuizID" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash3-fill"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>