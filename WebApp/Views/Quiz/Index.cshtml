@model List<Quiz>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Quizler
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Quiz Oluştur
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Quiz Adı</th>
                <th>Oluşturan</th>
                <th>Oluşturma Tarihi</th>
                <th>Sorular</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.QuizID</td>
                    <td>@obj.Name</td>
                    <td>@obj.CreatedBy</td>
                    <td>@obj.CreatedDate</td>
                    <td><a asp-controller="Question" asp-action="GetQuestions" asp-route-id="@obj.QuizID" class="btn btn-info">
                        Sorulara bak
                    </a>
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.QuizID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.QuizID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>

</div>